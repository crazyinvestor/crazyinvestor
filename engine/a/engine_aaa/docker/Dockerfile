FROM confluentinc/cp-kafka:latest

WORKDIR .

ENV KAFKA_BROKER_ID=1
ENV KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
ENV KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092,PLAINTEXT_HOST://localhost:29092
ENV KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
ENV KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT
ENV KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
ENV KAFKA_JMX_PORT=9091
ENV NUM_PARTITIONS=12
ENV KAFKA_CONFLUENT_SUPPORT_METRICS_ENABLE=false
ENV KAFKA_AUTO_CREATE_TOPICS_ENABLE=true

# RUN kafka/bin/kafka-topics.sh --create --topic new-ticker --bootstrap-server localhost:9092
 
